@model Taxi.Web.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}
<h2>Recover Password</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-addon"><i class="far fa-envelope-square"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="basic-addon1" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Recover password</button>
                <a asp-action="Login" class="btn btn-success">Back to login</a>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <h4 class="text-success font-weight-bold text-center">
            @ViewBag.Message
        </h4>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
