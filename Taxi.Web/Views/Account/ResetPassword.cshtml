@model Taxi.Web.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<h1>Reset Your Password</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Token" />


            <div class="form-group">
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-addon"><i class="far fa-envelope-square"></i></span>
                    <input asp-for="UserName" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="basic-addon1" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-addon"><i class="far fa-key"></i></span>
                    <input asp-for="Password" class="form-control" type="password" placeholder="New password" aria-label="NewPassword" aria-describedby="basic-addon1" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-addon"><i class="far fa-key"></i></span>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm" aria-label="Confirm" aria-describedby="basic-addon1" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Reset password</button>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <h4 class="text-success font-weight-bold text-center">
            @ViewBag.Message
        </h4>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}