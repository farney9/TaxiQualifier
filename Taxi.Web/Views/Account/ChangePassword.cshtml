@model Taxi.Web.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}

<h2>Change Password</h2>


<hr />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-addon"><i class="far fa-key"></i></span>
                    <input asp-for="OldPassword" class="form-control" type="password" placeholder="Current password" aria-label="OldPassword" aria-describedby="basic-addon1" />
                </div>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-addon"><i class="far fa-key"></i></span>
                    <input asp-for="NewPassword" class="form-control" type="password" placeholder="New password" aria-label="NewPassword" aria-describedby="basic-addon1" />
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-addon"><i class="far fa-key"></i></span>
                    <input asp-for="Confirm" class="form-control" type="password" placeholder="Confirm" aria-label="Confirm" aria-describedby="basic-addon1" />
                </div>
                <span asp-validation-for="Confirm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Change password</button>
                <a asp-action="ChangeUser" class="btn btn-success">Back to user</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
